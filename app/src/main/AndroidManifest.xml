<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.albertlopes.pokempow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.GameMenuActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.SignUpActivity" />
        <activity android:name=".view.GamePlayActivity" />
        <activity android:name=".view.GameOverActivity" />
        <activity android:name=".view.AboutActivity" />
        <activity android:name=".view.RankingActivity"></activity>
    </application>

</manifest>